@import '../../../styles/_colors.styl';

:host {
  ul {
    padding: 3px 10px;
    height: auto;
  }

  li {
    position: relative;
    list-style-type: none;

    &:after {
      content: '';
      display: block;
      clear: both;
    }
  }

  input {
    display: none;

    &:checked + label {
      font-weight: bold;
    
      &:before {
        transform: translateY(-90%) rotate(-55deg);
        border-color: colors.primary-color;
        border-top: none;
        border-right: none;
        height: 15px;
        width: 28px;
      }
    }
  }

  label {
    float: right;
    font-weight: normal;
    font-size: 20px;
    user-select: none;

    &:before {
      content: '';
      display: block;

      position: absolute;
      left: 0;
      top: 50%;
      transform: translateY(-50%);

      width: 24px;
      height: 24px;
      border: 2px solid colors.secondary-text-color;

      transition: all .1s linear;
    }
  }
}